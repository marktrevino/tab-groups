{
  "name": "tab-groups",
  "displayName": "tab-groups",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.78.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "viewsWelcome": [
      {
        "view": "tab-groups",
        "contents": "No saved tab groups.\n[Save current tabs as a group](command:tab-groups.helloWorld)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "tab-groups",
          "title": "Tab Groups",
          "icon": "src/assets/tab-groups.svg"
        }
      ]
    },
    "views": {
      "tab-groups": [{
        "id": "tab-groups",
        "name": "Tab Groups"
      }],
      "explorer": [
        {
          "id": "tab-groups-explorer",
          "name": "Tab Groups"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "tab-groups.saveGroup",
          "when": "view == tab-groups"
        }
      ],
      "view/item/context": [
        {
          "command": "tab-groups.helloWorld",
          "when": "view == tab-groups && viewItem == filetreeitem"
        },
        { 
          "command": "tab-groups.helloWorld",
          "when": "view == explorer && viewItem == grouptreeitem"
        }
      ]
    },
    "commands": [
      {
        "command": "tab-groups.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "tab-groups.saveGroup",
        "title": "Save Group"
      },
      {
        "command": "tab-groups.addToGroup",
        "title": "Add to Group"
      },
      {
        "command": "tab-groups.openFile",
        "title": "Open File"
      }
    ],
    "configuration": [
      {
        "title": "Tab Groups"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.78.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.0.4",
    "@vscode/test-electron": "^2.3.0"
  }
}
